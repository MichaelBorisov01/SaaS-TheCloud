<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalendarActivity"
    android:background="#fff">

    <me.jlurena.revolvingweekview.WeekView
        android:id="@+id/week_view_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:eventTextColor="@android:color/white"
        app:textSize="12sp"
        app:hourHeight="60dp"
        app:headerColumnPadding="8dp"
        app:headerColumnTextColor="@color/purple_200"
        app:headerRowPadding="12dp"
        app:columnGap="8dp"
        app:noOfVisibleDays="3"
        app:autoLimitTime="false"
        app:headerRowBackgroundColor="@color/black"
        app:dayBackgroundColor="#05000000"
        app:todayBackgroundColor="#1848adff"
        app:headerColumnBackground="#ffffffff"
        app:todayHeaderTextColor="@color/teal_200"
        app:newEventTimeResolutionInMinutes="15"
        app:timeColumnResolution="60"
        app:dropListenerEnabled="true"
        app:minOverlappingMinutes="5" />

    <TextView
        android:id="@+id/draggable_view_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="#ffff0000"
        android:padding="3dp"
        android:text="@string/drag_me" />

</RelativeLayout>